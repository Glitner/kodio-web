---
import Link from 'components/Link.astro';
import type { Mark, Props as PortableTextProps } from 'astro-portabletext/types';
import type { Slug } from 'types/sanity';

export type Props = PortableTextProps<Mark<{ slug: Slug } | undefined>>;

const { node, astroClass = '' } = Astro.props;

const href = `/${node.markDef?.slug.current ?? ''}`;
---

<Link className={astroClass} href={href}><slot /></Link>
