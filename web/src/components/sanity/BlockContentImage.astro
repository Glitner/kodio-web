---
import Image from '@components/sanity/Image.astro';
import type { ImageObj } from '@lib/sanity';
import type { Props as PortableTextProps } from 'astro-portabletext/types';

export type Props = PortableTextProps<ImageObj>;

const { node } = Astro.props;
---

<Image image={node} sizes="(min-width: 780px) 480px, calc(100vw - 48px)" />
