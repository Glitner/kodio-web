---
export interface Props {
  id?: string;
  className?: string;
  ariaLabel?: string;
  type?: 'button' | 'submit';
}

const { id, className, ariaLabel, type = 'button' } = Astro.props;
---

<button id={id} class:list={[className]} aria-label={ariaLabel} type={type}>
  <slot />
</button>

<style lang="scss">
  button {
    @include button(transparent);
  }
</style>
