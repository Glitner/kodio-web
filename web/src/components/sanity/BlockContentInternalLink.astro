---
import type { Mark, Props } from 'astro-portabletext';
import type { Slug } from 'types/sanity';
import Link from 'components/Link.astro';

const { node, astroClass = '' } = Astro.props as Props<Mark<{ slug: Slug }>>;

const href = `/${node.markDef.slug.current}`;
---

<Link className={astroClass} href={href}><slot /></Link>
